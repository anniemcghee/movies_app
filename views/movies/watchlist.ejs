<% include ../header %>

<p>
<h2>Your Watchlist:</h2>
</p>

<div class="container">
<table class='table table-condensed table-striped'>
	<% for (var i = 0; i < data2.length; i++) { %>
		<tr>
			<td>
				<a href='/movies/<%= data2[i].imdb_code %>'><%= data2[i].title %></a>
				<h4> (<%= data2[i].year %>) </h4> 
				<br>
				<button data-id=<%= data2[i].id %> class="btn btn-default btn-xs btn-danger delete-btn text-center" display="block">X</button>
				<br>
				<div class="comments">
				<a href='/movies/watchlist/<%= data2[i].id %>/comments'><button data-id='<%= data2[i].id %>' class="btn btn-default btn-md btn-danger add-btn2 text-center" display="block">+ Comment</button></a>
				</div>
				<br>
			</td>
		</tr>		
	<% } %>
</table>
</div>
<% include ../footer %>
