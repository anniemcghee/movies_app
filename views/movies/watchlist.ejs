<% include ../header %>

<p>
<h2>Your Watchlist:</h2>
</p>

<div class="container">
<table class='table table-condensed table-striped'>
	<% for (var i = 0; i < data2.length; i++) { %>
		<tr>
<!-- 			<td>
				<span class="glyphicon glyphicon-star"></span>
			</td> -->
			<td>
				<a href='/movies/<%= data2[i].imdb_code %>'><%= data2[i].title %></a>
				<h4> (<%= data2[i].year %>) </h4>
				<button data-id=<%= data2[i].id %> class="btn btn-default btn-xs btn-danger delete-btn" display="block"><span class="glyphicon glyphicon-remove"></span></button>
				<br>
			</td>
		</tr>		
	<% } %>
</table>
</div>
<% include ../footer %>
