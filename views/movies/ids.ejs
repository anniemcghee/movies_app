<% include ../header %>


<p>
<h2><%= results2.Title %></h2>
</p>


<p>
  <h4><%= results2.Year %> | <%= results2.Genre %> | Starring <%= results2.Actors %></h4>
</p>
<p>

<% if (movieFound) { %>
	<button class="btn disabled" id="add">In list</button>
<% } else { %>
	<button type="submit" data-title='<%= results2.Title %>' data-year='<%= results2.Year %>' data-imdb='<%= results2.imdbID %>' class="btn btn-default add-btn" id="add">+</button>
<% } %>


</p>

<br>
<div class="row">
  <div class="col-md-4 col-md-offset-2"><h3><%= results2.Plot %></h3><h4><em> (Rotten Tomatoes gives it a <%= results2.tomatoMeter %>/100)</em></h4></div>
  <div class="col-md-4"><img src=<%= results2.Poster %>></div>
</div>


<br>


<% include ../footer %>