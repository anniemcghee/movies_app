<% include ../header %>


<p>
<h2><%= Title %></h2>
</p>


<p>
  <h4><%= Year %> | <%= Genre %> | Starring <%= Actors %></h4>
</p>
<p>
<form action="/movies/watchlist" method="post">
<input type="hidden" name="imdb_code" value="<%= imdbID %>">
